<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>

            <gradient
                android:startColor="#232323"
                android:centerColor="#1e1f20"
                android:endColor="#232323"
                android:angle="270" />

            <stroke
                android:width="1dp"
                android:color="#e4e465" />

            <corners android:radius="1dp" />

            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>